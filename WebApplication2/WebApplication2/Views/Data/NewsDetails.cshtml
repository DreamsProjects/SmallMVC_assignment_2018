@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@using WebApplication2.Models

@model List<News>
@*Strongly Typed View*@
<style>

	#text {
		margin-left: 100px;
	}
</style>

<div>
	<h2>Yahoo! <input type="text" /><input type="submit" value="Sök på webben" /></h2>

	<div id="text">
		@foreach (var item in Model)
		{
			<a asp-controller="Data" asp-action="NewsList" asp-route-id=@item.ID>@item.Headline</a>
			<p>@item.NewsText.Substring(0, 40)</p>
		}
	</div>
</div>